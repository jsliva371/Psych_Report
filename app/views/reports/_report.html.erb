<div id="<%= dom_id(report) %>" class="container mt-4">
  <!-- Report Card -->
  <div class="card">
    <div class="card-header">
      <h4 class="card-title">Report for User ID: <%= report.user_id %></h4>
      <h3 class="card-title">Name: <%= report.name %></h4>
    </div>
    <div class="card-body">

      <!-- Scores Table -->
      <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Test</th>
            <th>Scaled Score</th>
            <th>Percentile Score</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Similarities</td>
            <td><%= report.similarities_scaled_score %></td>
            <td><%= report.similarities_percentile_score %></td>
          </tr>
          <tr>
            <td>Vocabulary</td>
            <td><%= report.vocabulary_scaled_score %></td>
            <td><%= report.vocabulary_percentile_score %></td>
          </tr>
          <tr>
            <td>Block Design</td>
            <td><%= report.block_design_scaled_score %></td>
            <td><%= report.block_design_percentile_score %></td>
          </tr>
          <tr>
            <td>Visual Puzzles</td>
            <td><%= report.visual_puzzles_scaled_score %></td>
            <td><%= report.visual_puzzles_percentile_score %></td>
          </tr>
          <tr>
            <td>Matrix Reasoning</td>
            <td><%= report.matrix_reasoning_scaled_score %></td>
            <td><%= report.matrix_reasoning_percentile_score %></td>
          </tr>
          <tr>
            <td>Figure Weights</td>
            <td><%= report.figure_weights_scaled_score %></td>
            <td><%= report.figure_weights_percentile_score %></td>
          </tr>
          <tr>
            <td>Digit Span</td>
            <td><%= report.digit_span_scaled_score %></td>
            <td><%= report.digit_span_percentile_score %></td>
          </tr>
          <tr>
            <td>Picture Span</td>
            <td><%= report.picture_span_scaled_score %></td>
            <td><%= report.picture_span_percentile_score %></td>
          </tr>
          <tr>
            <td>Coding</td>
            <td><%= report.coding_scaled_score %></td>
            <td><%= report.coding_percentile_score %></td>
          </tr>
          <tr>
            <td>Symbol Search</td>
            <td><%= report.symbol_search_scaled_score %></td>
            <td><%= report.symbol_search_percentile_score %></td>
          </tr>
        </tbody>
      </table>

      <!-- VCI Section -->
      <div class="mb-3">
        <h5>VCI (Verbal Comprehension Index)</h5>
        <p><strong>Standard Score:</strong> <%= report.vci_standard %></p>
        <p><strong>Percentile Score:</strong> <%= report.vci_percentile %></p>
        <p><strong>Analysis:</strong> <%= report.vci_analysis %></p>
      </div>

      <!-- VSI Section -->
      <div class="mb-3">
        <h5>VSI (Visual Spatial Index)</h5>
        <p><strong>Standard Score:</strong> <%= report.vsi_standard %></p>
        <p><strong>Percentile Score:</strong> <%= report.vsi_percentile %></p>
        <p><strong>Analysis:</strong> <%= report.vsi_analysis %></p>
      </div>

      <!-- FRI Section -->
      <div class="mb-3">
        <h5>FRI (Fluid Reasoning Index)</h5>
        <p><strong>Standard Score:</strong> <%= report.fri_standard %></p>
        <p><strong>Percentile Score:</strong> <%= report.fri_percentile %></p>
        <p><strong>Analysis:</strong> <%= report.fri_analysis %></p>
      </div>

      <!-- WMI Section -->
      <div class="mb-3">
        <h5>WMI (Working Memory Index)</h5>
        <p><strong>Standard Score:</strong> <%= report.wmi_standard %></p>
        <p><strong>Percentile Score:</strong> <%= report.wmi_percentile %></p>
        <p><strong>Analysis:</strong> <%= report.wmi_analysis %></p>
      </div>

      <!-- PSI Section -->
      <div class="mb-3">
        <h5>PSI (Processing Speed Index)</h5>
        <p><strong>Standard Score:</strong> <%= report.psi_standard %></p>
        <p><strong>Percentile Score:</strong> <%= report.psi_percentile %></p>
        <p><strong>Analysis:</strong> <%= report.psi_analysis %></p>
      </div>

      <!-- FSIQ Section -->
      <div class="mb-3">
        <h5>FSIQ (Full Scale IQ)</h5>
        <p><strong>Standard Score:</strong> <%= report.fsiq_standard %></p>
        <p><strong>Percentile Score:</strong> <%= report.fsiq_percentile %></p>
        <p><strong>Analysis:</strong> <%= report.fsiq_analysis %></p>
      </div>

      <!-- Individual Test Analysis -->
      <div class="mb-3">
        <h5>Test Analysis</h5>
        <p><strong>Similarities:</strong> <%= report.similarities_analysis %></p>
        <p><strong>Vocabulary:</strong> <%= report.vocabulary_analysis %></p>
        <p><strong>Block Design:</strong> <%= report.block_design_analysis %></p>
        <p><strong>Visual Puzzles:</strong> <%= report.visual_puzzles_analysis %></p>
        <p><strong>Matrix Reasoning:</strong> <%= report.matrix_reasoning_analysis %></p>
        <p><strong>Figure Weights:</strong> <%= report.figure_weights_analysis %></p>
        <p><strong>Digit Span:</strong> <%= report.digit_span_analysis %></p>
        <p><strong>Picture Span:</strong> <%= report.picture_span_analysis %></p>
        <p><strong>Symbol Search:</strong> <%= report.symbol_search_analysis %></p>
        <p><strong>Coding:</strong> <%= report.coding_analysis %></p>
      </div>

      <!-- Analysis Section -->
      <div class="mb-3">
        <p><strong>Overall Analysis:</strong></p>
        <p class="text-muted"><%= report.analysis %></p>
      </div>

    </div>
  </div>
</div>
